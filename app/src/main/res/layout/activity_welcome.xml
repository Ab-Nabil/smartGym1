<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcomeActivity"
    android:background="@drawable/hello"
    >

    <ImageView
        android:id="@+id/hello2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/hello2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/hello3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="HELLO!"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/hello2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/hello4"
        android:text="Start transforming the way \n        you enjoy your life"
        android:textColor="@color/colorGray"
        android:layout_below="@+id/hello3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/hello5"
        android:layout_below="@+id/hello4"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hello3"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hello5"
        android:layout_centerHorizontal="true"
        android:id="@+id/hello6"
        android:layout_marginTop="30dp"
        >
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/hello4"
            />
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/hello5"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/hello6"
            />
    </LinearLayout>

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
android:layout_below="@+id/hello6"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="10dp"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:text="Already Registered ?"
            android:id="@+id/hello7"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:background="@android:color/transparent"
        android:layout_marginLeft="4dp"
        android:textSize="17dp"
        android:text="Login"
        android:textColor="#3EC7E6"
        android:textStyle="bold" />
</LinearLayout>
</RelativeLayout>